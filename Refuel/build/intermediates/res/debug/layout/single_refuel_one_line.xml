<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleRefuelOneLine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/oneLineKm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:text="@string/km"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oneLinePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/price"
            android:layout_margin="5sp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oneLinePaid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/paid"
            android:layout_margin="5sp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oneLineQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quantity"
            android:layout_margin="5sp"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/oneLineFuelStation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/fuelStationHint"
        android:textColor="#000000"
        android:textSize="15sp" />

</LinearLayout><!-- From: file:/C:/Users/Andrea/git/refuel/Refuel/res/layout/single_refuel_one_line.xml -->